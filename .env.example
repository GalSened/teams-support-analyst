# ==========================================
# Teams Support Analyst - Environment Config
# ==========================================

# LocalSearch API
REPO_ROOTS=/path/to/repo1:/path/to/repo2:/path/to/repo3
LOCALSEARCH_PORT=3001
MAX_SEARCH_RESULTS=30
MAX_FILE_LINES=200

# n8n Configuration
N8N_PORT=5678
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# Azure Bot Framework
MICROSOFT_APP_ID=your-app-id-here
MICROSOFT_APP_PASSWORD=your-app-password-here
MICROSOFT_APP_TYPE=MultiTenant
TEAMS_BOT_PORT=3978

# Microsoft Graph API
GRAPH_API_URL=https://graph.microsoft.com/v1.0
TENANT_ID=your-tenant-id-here

# Claude API (Anthropic)
CLAUDE_API_KEY=sk-ant-your-key-here
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096

# Stability Loop Settings
MAX_ATTEMPTS=4
CONFIDENCE_THRESHOLD=0.9
STABLE_HASH_COUNT=2

# State Management (Redis optional)
REDIS_URL=redis://localhost:6379
STATE_TTL_SECONDS=259200

# Logging
LOG_LEVEL=info
LOG_ENDPOINT=
